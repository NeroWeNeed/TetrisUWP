<Page
    x:Class="TetrisUWP.Credits"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TetrisUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="Assets/Images/credits.png"/>
        <Button x:Name="button" Margin="22,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Height="155" Width="231" Click="Button_Click">
            <Image Source="Assets/Images/homebutton.png" Margin="4,-0.25,-4,-0.25"/>
        </Button>
    </Grid>
</Page>
